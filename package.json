{
  "name": "cscript-language",
  "version": "1.0.1",
  "description": "CScript - A hybrid programming language combining JavaScript, TypeScript, C, C++, and C# syntax with pipeline operators, match expressions, LINQ queries, and operator overloading",
  "main": "dist/transpile.js",
  "types": "dist/transpile.d.ts",
  "type": "module",
  "bin": {
    "cscript": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "cli": "node --loader ts-node/esm src/cli.ts",
    "transpile": "node --loader ts-node/esm src/cli.ts",
    "test": "npm run cli tests/test-phase4-complete.csc",
    "prepare": "npm run build",
    "start": "node --loader ts-node/esm src/run.ts",
    "dev": "npm start",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "cscript",
    "transpiler",
    "hybrid-language",
    "pipeline-operators",
    "match-expressions",
    "linq",
    "operator-overloading",
    "functional-programming",
    "typescript",
    "javascript",
    "csharp",
    "cplusplus",
    "babel",
    "ast",
    "compiler"
  ],
  "author": "beeneyn",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/beeneyn/cscript-language.git"
  },
  "bugs": {
    "url": "https://github.com/beeneyn/cscript-language/issues"
  },
  "homepage": "https://github.com/beeneyn/cscript-language#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE",
    "examples/**/*"
  ],
  "devDependencies": {
    "@babel/generator": "^7.23.6",
    "@babel/parser": "^7.23.6",
    "@babel/traverse": "^7.23.6",
    "@babel/types": "^7.23.6",
    "@types/babel__generator": "^7.6.8",
    "@types/babel__traverse": "^7.20.5",
    "@types/node": "^20.10.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.2"
  }
}